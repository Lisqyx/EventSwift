<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - EventSwift Planner</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body class="@(ViewContext.RouteData.Values["controller"].ToString() == "Account" && ViewContext.RouteData.Values["action"].ToString() == "Login" ? "bg-gradient-custom login-page-bg" : "")">
    @{
        bool skipNavbar = ViewBag.SkipNavbar != null && (bool)ViewBag.SkipNavbar;
    }

    @if (!skipNavbar)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-custom shadow rounded-4 mt-3 mx-3">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center brand-hover" href="@Url.Action("Login", "Account")">
                        <img src="~/Content/Images/eventswift_logo.png" alt="ES" style="height: 40px;" class="me-2" />
                        Event Swift
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <!-- Add nav links here if needed -->
                    </div>
                </div>
            </nav>
        </header>
    }

    @if (ViewContext.RouteData.Values["controller"].ToString() == "Account" && ViewContext.RouteData.Values["action"].ToString() == "Login")
    {
        <main class="container-fluid px-0 d-flex align-items-start main-area" style="min-height: 100vh; margin-top: 5rem;">
            <div class="main-card p-4 my-4 shadow-lg rounded-4" style="max-width: 480px; margin-top: 6vh; background: rgba(255,255,255,0.95);">
                @RenderBody()
            </div>
        </main>
        <footer class="text-center py-4 mt-auto footer-enhanced">
            <p class="mb-0">&copy; @DateTime.Now.Year - EventSwift</p>
        </footer>
    }
    else
    {
        @RenderBody()
    }

    <!-- Other scripts -->
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>


    // Global button loading and duplicate prevention
    $(document).on('submit', 'form', function (e) {
        var $form = $(this);
        // Find all submit buttons in the form
        var $btns = $form.find('button[type="submit"], input[type="submit"]');
        $btns.each(function () {
            var $btn = $(this);
            if (!$btn.data('loading-text')) {
                $btn.data('loading-text', $btn.html() || $btn.val());
            }
            $btn.prop('disabled', true);
            if ($btn.is('button')) {
                $btn.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Loading...');
            } else if ($btn.is('input')) {
                $btn.val('Loading...');
            }
        });
    });
    // For non-form buttons (e.g., AJAX or custom actions), add a class 'btn-loading' to use this effect
    $(document).on('click', 'button.btn-loading', function () {
        var $btn = $(this);
        if (!$btn.data('loading-text')) {
            $btn.data('loading-text', $btn.html());
        }
        $btn.prop('disabled', true);
        $btn.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Loading...');
    });
    </script>
    <script>
    // Notification bell: mark all as read when dropdown opens
    $(document).ready(function () {
        var notificationsMarked = false;
        var $dropdown = $('#notificationDropdown');
        var $badge = $('#notificationBadge');
        var $notificationItems = $('.notification-item');
        var $newBadges = $('.notification-item .badge');
        
        $dropdown.on('show.bs.dropdown', function () {
            console.log('Dropdown opened');
            if (notificationsMarked || $badge.length === 0) return;
            var token = $('input[name="__RequestVerificationToken"]').val();
            console.log('Sending AJAX to mark all as read...');
            $.ajax({
                url: '/Notifications/MarkAllAsRead',
                type: 'POST',
                data: { __RequestVerificationToken: token },
                success: function () {
                    notificationsMarked = true;
                    $badge.remove();
                    $newBadges.remove();
                    console.log('Notifications marked as read, badge and labels removed.');
                },
                error: function (xhr, status, error) {
                    console.error('Failed to mark notifications as read:', error, xhr.responseText);
                }
            });
        });
    });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
