@model PagedList.IPagedList<EventSwift.Models.Event>

@using PagedList.Mvc
@using PagedList

@{
    ViewBag.Title = "Events for Approval";
    ViewBag.SkipNavbar = true;
    var currentFilter = ViewBag.CurrentFilter as string ?? "All";
}

<style>
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 25px;
    }

    .pagination li {
        margin: 0 2px;
    }

        .pagination li a,
        .pagination li span {
            padding: 8px 14px;
            border-radius: 8px;
            font-size: 14px;
            text-decoration: none;
            border: 1px solid #dee2e6;
            background: #ffffff;
            transition: all 0.2s ease-in-out;
        }

            .pagination li a:hover {
                background: #0d6efd;
                color: #fff;
                border-color: #0d6efd;
            }

    .pagination .active span {
        background: #0d6efd;
        color: #fff;
        border-color: #0d6efd;
    }

    .pagination .disabled span {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* Filter styles */
    .filter-btn {
        border: 2px solid #dee2e6;
        background: #fff;
        color: #495057;
        font-weight: 500;
        padding: 8px 16px;
        border-radius: 20px;
        transition: all 0.2s ease-in-out;
        font-size: 0.9rem;
        text-decoration: none;
    }

        .filter-btn:hover {
            border-color: var(--green);
            color: var(--green);
            text-decoration: none;
        }

        .filter-btn.active {
            background: var(--green);
            border-color: var(--green);
            color: #fff;
        }

            .filter-btn.active:hover {
                background: var(--green);
                color: #fff;
            }

        .filter-btn .badge {
            font-size: 0.75rem;
            padding: 3px 8px;
            margin-left: 5px;
        }
</style>

<div class="d-flex">
    @Html.Partial("~/Views/Shared/_Sidebar.cshtml")

    <div class="flex-grow-1 p-2">
        @Html.Partial("~/Views/Shared/_Navbar.cshtml")

        @Html.Partial("~/Views/Shared/_SectionHeader.cshtml", new ViewDataDictionary { { "Icon", "bi-folder-check" }, { "Text", "Events for Approval" }, { "Color", "var(--green)" } })

        @if (TempData["Success"] != null || TempData["Error"] != null || TempData["Message"] != null)
        {
            <div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 1080;">
                <div class="toast align-items-center text-bg-@(TempData["Error"] != null ? "danger" : "success") border-0 show" role="alert" id="feedbackToast">
                    <div class="d-flex">
                        <div class="toast-body">
                            @(TempData["Error"] ?? TempData["Success"] ?? TempData["Message"])
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }

        <!-- Filter Section -->
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-body py-3">
                <div class="d-flex align-items-center flex-wrap gap-2">
                    <span class="me-2 fw-semibold" style="color: var(--green);"><i class="bi bi-funnel me-1"></i>Filter:</span>

                    <a href="@Url.Action("ApprovalsIndex", new { filter = "All" })"
                       class="filter-btn @(currentFilter == "All" ? "active" : "")">
                        <i class="bi bi-grid me-1"></i>All
                        <span class="badge @(currentFilter == "All" ? "bg-light text-dark" : "bg-secondary")">@ViewBag.AllCount</span>
                    </a>

                    <a href="@Url.Action("ApprovalsIndex", new { filter = "Pending" })"
                       class="filter-btn @(currentFilter == "Pending" ? "active" : "")">
                        <i class="bi bi-hourglass-split me-1"></i>For Approval
                        <span class="badge @(currentFilter == "Pending" ? "bg-light text-dark" : "bg-warning text-dark")">@ViewBag.PendingCount</span>
                    </a>

                    <a href="@Url.Action("ApprovalsIndex", new { filter = "SentToPresident" })"
                       class="filter-btn @(currentFilter == "SentToPresident" ? "active" : "")">
                        <i class="bi bi-send me-1"></i>Sent to President
                        <span class="badge @(currentFilter == "SentToPresident" ? "bg-light text-dark" : "bg-info")">@ViewBag.SentToPresidentCount</span>
                    </a>

                    <a href="@Url.Action("ApprovalsIndex", new { filter = "ApprovedByPresident" })"
                       class="filter-btn @(currentFilter == "ApprovedByPresident" ? "active" : "")">
                        <i class="bi bi-check-circle me-1"></i>Approved
                        <span class="badge @(currentFilter == "ApprovedByPresident" ? "bg-light text-dark" : "bg-success")">@ViewBag.ApprovedCount</span>
                    </a>

                    <a href="@Url.Action("ApprovalsIndex", new { filter = "Rejected" })"
                       class="filter-btn @(currentFilter == "Rejected" ? "active" : "")">
                        <i class="bi bi-x-circle me-1"></i>Returned
                        <span class="badge @(currentFilter == "Rejected" ? "bg-light text-dark" : "bg-danger")">@ViewBag.RejectedCount</span>
                    </a>

                    <a href="@Url.Action("ApprovalsIndex", new { filter = "Lapsed" })"
                       class="filter-btn @(currentFilter == "Lapsed" ? "active" : "")">
                        <i class="bi bi-clock-history me-1"></i>Lapsed
                        <span class="badge @(currentFilter == "Lapsed" ? "bg-light text-dark" : "bg-dark")">@ViewBag.LapsedCount</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div id="deleteConfirmModal" class="modal fade" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this event? This will permanently delete all documents and approvals associated with this event for your office. This action cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <form id="deleteEventForm" method="post" action="@Url.Action("DeleteEvent", "ProposalApprovals")">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="eventId" id="deleteEventIdInput" />
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-calendar-x" style="font-size: 3rem; color: var(--orange);"></i>
                        <h5 class="mt-3 mb-2" style="color: var(--green);">No Events Found</h5>
                        <p class="text-muted mb-0">
                            @if (currentFilter != "All")
                            {
                                <span>No events with status "@currentFilter". </span>
                                <a href="@Url.Action("ApprovalsIndex", new { filter = "All" })">View all events</a>
                            }
                            else
                            {
                                <span>There are currently no events with documents for your office.</span>
                            }
                        </p>
                    </div>
                }
                else
                {
                    <table class="table table-hover align-middle mb-0">
                        <thead style="background: var(--light-yellow);">
                            <tr>
                                <th style="color: var(--green);">Title</th>
                                <th style="color: var(--green);">Lapse Date</th>
                                <th style="color: var(--green);">Status</th>
                                <th style="color: var(--green);">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ev in Model)
                            {
                                var isLapsed = ev.Status == "Lapsed" || ev.IsLapsed;
                                var isApproved = ev.Status == "ApprovedByPresident" || ev.Status == "SentToPresident";
                                <tr class="@(isLapsed ? "table-secondary" : "")">
                                    <td>@ev.Title</td>
                                    <td>
                                        @if (ev.LapseDate.HasValue)
                                        {
                                            var daysLeft = (ev.LapseDate.Value - DateTime.Now).TotalDays;

                                            @* If approved or sent to president, show plain black text *@
                                            if (isApproved)
                                            {
                                                <span class="text-dark">@ev.LapseDate.Value.ToString("g")</span>
                                            }
                                            else if (isLapsed)
                                            {
                                                <span class="text-dark"><i></i>@ev.LapseDate.Value.ToString("g")</span>
                                            }
                                            else if (daysLeft <= 1)
                                            {
                                                <span class="text-danger fw-bold"><i class="bi bi-exclamation-triangle me-1"></i>@ev.LapseDate.Value.ToString("g")</span>
                                            }
                                            else if (daysLeft <= 3)
                                            {
                                                <span class="text-warning"><i class="bi bi-clock me-1"></i>@ev.LapseDate.Value.ToString("g")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@ev.LapseDate.Value.ToString("g")</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (isLapsed)
                                        {
                                            <span class="badge bg-dark"><i class="bi bi-clock-history me-1"></i>Lapsed</span>
                                        }
                                        else if (ev.Status == "Approved")
                                        {
                                            <span class="badge" style="background: var(--green); color: #fff;">Approved</span>
                                        }
                                        else if (ev.Status == "Pending")
                                        {
                                            <span class="badge" style="background: var(--orange); color: #fff;">For Approval</span>
                                        }
                                        else if (ev.Status == "Rejected")
                                        {
                                            <span class="badge" style="background: var(--red); color: #fff;">Returned</span>
                                        }
                                        else if (ev.Status == "ApprovedByPresident")
                                        {
                                            <span class="badge bg-success" style="color: #fff;">Approved By President</span>
                                        }
                                        else if (ev.Status == "SentToPresident")
                                        {
                                            <span class="badge bg-info" style="color: #fff;">Sent to President</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@ev.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                using (var db = new EventSwift.Models.DefaultConnection())
                                                {
                                                    var user = db.Users.FirstOrDefault(u => u.Username == User.Identity.Name);
                                                    if (user?.Role == "VPA")
                                                    {
                                                        <a href="@Url.Action("VPAEventOverview", "ProposalApprovals", new { id = ev.EventId })" class="btn btn-sm btn-custom" style="font-size: 0.92rem;">
                                                            <i class="bi bi-eye me-1"></i> View
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a href="@Url.Action("EventDetails", "ProposalApprovals", new { id = ev.EventId })" class="btn btn-sm btn-custom" style="font-size: 0.92rem;">
                                                            <i class="bi bi-eye me-1"></i> View
                                                        </a>
                                                    }
                                                }
                                            }
                                            @if (!isLapsed)
                                            {
                                                <button type="button" class="btn btn-sm btn-danger" style="font-size: 0.92rem;" data-event-id="@ev.EventId" onclick="showDeleteModal(this)">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="pagination-container">
                @Html.PagedListPager(
                    Model,
                    page => Url.Action("ApprovalsIndex", new { page, filter = currentFilter }),
                    new PagedList.Mvc.PagedListRenderOptions()
                    {
                        DisplayLinkToFirstPage = PagedList.Mvc.PagedListDisplayMode.Always,
                        DisplayLinkToLastPage = PagedList.Mvc.PagedListDisplayMode.Always,
                        DisplayLinkToNextPage = PagedList.Mvc.PagedListDisplayMode.Always,
                        DisplayLinkToPreviousPage = PagedList.Mvc.PagedListDisplayMode.Always,
                        MaximumPageNumbersToDisplay = 5,
                        UlElementClasses = new[] { "pagination" },
                        LiElementClasses = new[] { "page-item" },
                        LinkToPreviousPageFormat = "‹ Prev",
                        LinkToNextPageFormat = "Next ›",
                        LinkToFirstPageFormat = "« First",
                        LinkToLastPageFormat = "Last »"
                    }
                )
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function showDeleteModal(btn) {
            var eventId = btn.getAttribute('data-event-id');
            document.getElementById('deleteEventIdInput').value = eventId;
            var modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            modal.show();
        }

        // Auto-hide toast after 3 seconds
        document.addEventListener('DOMContentLoaded', function () {
            var toastEl = document.getElementById('feedbackToast');
            if (toastEl) {
                setTimeout(function () {
                    var toast = bootstrap.Toast.getOrCreateInstance(toastEl);
                    toast.hide();
                }, 3000);
            }
        });
    </script>
}