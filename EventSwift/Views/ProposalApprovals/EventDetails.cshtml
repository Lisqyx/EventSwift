@model IEnumerable<EventSwift.Models.EventProposal>

@{
    ViewBag.Title = "Documents for Event: " + (ViewBag.EventTitle ?? "");
    ViewBag.SkipNavbar = true;
    var role = ViewBag.Role as string ?? "";
    var isEventLapsed = ViewBag.IsEventLapsed as bool? ?? false;
    var lapseDate = ViewBag.LapseDate as DateTime?;
}

<div class="d-flex">
    @Html.Partial("~/Views/Shared/_Sidebar.cshtml")

    <div class="flex-grow-1 p-4">
        @Html.Partial("~/Views/Shared/_Navbar.cshtml")

        @Html.Partial("~/Views/Shared/_SectionHeader.cshtml", new ViewDataDictionary { { "Icon", "bi-calendar-event" }, { "Text", $"Documents for Event: {ViewBag.EventTitle}" }, { "Color", "var(--green)" }, { "Status", ViewBag.EventStatus } })

        <a href="@Url.Action("ApprovalsIndex")" class="btn btn-outline-custom mb-3"><i class="bi bi-arrow-left me-1"></i>Back to Events</a>

        @if (isEventLapsed)
        {
            <div class="alert alert-dark mb-4">
                <i class="bi bi-clock-history me-2"></i>
                <strong>This event has lapsed.</strong>
                @if (lapseDate.HasValue)
                {
                    <span>The lapse date was @lapseDate.Value.ToString("MMM dd, yyyy hh:mm tt").</span>
                }
                <span>Documents can only be viewed.</span>
            </div>
        }

        <div class="card shadow-sm border-0">
            <div class="card-header" style="background: var(--light-yellow); border-bottom: 2px solid var(--orange);">
                <h5 class="mb-0" style="color: var(--green); font-weight: 600;">
                    <i class="bi bi-file-earmark-text me-2"></i>Documents List
                </h5>
            </div>
            <div class="card-body p-0">
                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-file-earmark-x" style="font-size: 3rem; color: var(--orange);"></i>
                        <h5 class="mt-3 mb-2" style="color: var(--green);">No Documents</h5>
                        <p class="text-muted mb-0">There are currently no documents for your office in this event.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="color: var(--green); font-weight: 600;"><i class="bi bi-file-earmark-text me-1"></i>Title</th>
                                    <th style="color: var(--green); font-weight: 600;"><i class="bi bi-info-circle me-1"></i>Status</th>
                                    <th style="color: var(--green); font-weight: 600;"><i class="bi bi-clock me-1"></i>Submitted At</th>
                                    <th style="color: var(--green); font-weight: 600;"><i class="bi bi-gear me-1"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var proposal in Model)
                                {
                                    var approval = proposal.Approvals.FirstOrDefault(a => a.Office == role);
                                    <tr class="@(isEventLapsed ? "table-secondary" : "")">
                                        <td class="fw-semibold" style="font-size: 1.05rem;">
                                            <i class="bi bi-file-earmark-text me-1" style="color: @(isEventLapsed ? "#6c757d" : "var(--green)");"></i>@proposal.Title
                                        </td>
                                        <td>
                                            @if (isEventLapsed)
                                            {
                                                <span class="badge bg-dark"><i class="bi bi-clock-history me-1"></i>Lapsed</span>
                                            }
                                            else if (approval != null)
                                            {
                                                if (approval.Status == "Approved")
                                                {
                                                    <span class="badge" style="background: var(--green); color: #fff;">Approved</span>
                                                }
                                                else if (approval.Status == "Pending")
                                                {
                                                    <span class="badge" style="background: var(--orange); color: #fff;">For Approval</span>
                                                }
                                                else if (approval.Status == "Rejected")
                                                {
                                                    <span class="badge" style="background: var(--red); color: #fff;">Returned</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@approval.Status</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">-</span>
                                            }
                                        </td>
                                        <td>@proposal.SubmittedAt.ToString("g")</td>
                                        <td>
                                            @if (approval != null)
                                            {
                                                if (isEventLapsed)
                                                {
                                                    <a href="@Url.Action("Details", "ProposalApprovals", new { id = approval.ProposalApprovalId })" class="btn btn-sm btn-secondary px-3 d-inline-flex align-items-center gap-1 mb-1">
                                                        <i class="bi bi-eye"></i> View Only
                                                    </a>
                                                }
                                                else if (approval.Status == "Pending" || approval.Status == "Resubmitted")
                                                {
                                                    <a href="@Url.Action("Details", "ProposalApprovals", new { id = approval.ProposalApprovalId })" class="btn btn-sm btn-custom px-3 d-inline-flex align-items-center gap-1 mb-1">
                                                        <i class="bi bi-check2-square"></i> Review
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Details", "ProposalApprovals", new { id = approval.ProposalApprovalId })" class="btn btn-sm btn-outline-custom px-3 d-inline-flex align-items-center gap-1 mb-1">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>