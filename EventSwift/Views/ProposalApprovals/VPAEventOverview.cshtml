                            <div class="card-body text-center">
                                <div class="mb-2">
                                    <i class="bi bi-check-circle" style="color: @(isEventLapsed ? "#6c757d" : allDirectVpaApproved ? "#28a745" : "#dc3545"); font-size: 2em;"></i>
                                </div>
                                <h6 class="card-title">Direct VPA</h6>
                                <div class="mb-2">
                                    @if (isEventLapsed)
                                    {
                                        <span class="badge bg-dark">Lapsed</span>
                                    }
                                    else if (allDirectVpaApproved)
                                    {
