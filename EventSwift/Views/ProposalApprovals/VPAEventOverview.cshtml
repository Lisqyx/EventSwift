        @if (isEventLapsed)
        {
            <div class="alert alert-dark mb-4">
                <i class="bi bi-clock-history me-2"></i>
                <strong>This event has lapsed.</strong>
                @if (Model.LapseDate.HasValue)
                {
                    <span>The lapse date was @Model.LapseDate.Value.ToString("MMM dd, yyyy hh:mm tt").</span>
                }
                <span>Documents can only be viewed. No actions can be taken.</span>
            </div>
        }

        <!-- Event Lapse Date Info -->
        @if (Model.LapseDate.HasValue && !isEventLapsed)
        {
            var daysLeft = (Model.LapseDate.Value - DateTime.Now).TotalDays;
            <div class="alert @(daysLeft <= 1 ? "alert-danger" : daysLeft <= 3 ? "alert-warning" : "alert-info") mb-4">
                <i class="bi @(daysLeft <= 1 ? "bi-exclamation-triangle" : "bi-clock") me-2"></i>
                <strong>Event Lapse Date:</strong> @Model.LapseDate.Value.ToString("MMM dd, yyyy hh:mm tt")
                @if (daysLeft <= 1)
                {
                    <span class="badge bg-danger ms-2">Urgent - Less than 1 day left!</span>
                }
                else if (daysLeft <= 3)
                {
                    <span class="badge bg-warning text-dark ms-2">@Math.Ceiling(daysLeft) days remaining</span>
                }
            </div>
        }

