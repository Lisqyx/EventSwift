<!-- Toast container for Create Event -->
<div aria-live="polite" aria-atomic="true"
     class="position-fixed top-0 end-0 p-3"
     style="z-index: 1080; min-width: 300px;">
    <div id="createEventToast"
         class="toast align-items-center text-bg-success border-0"
         role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="createEventToastBody"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Generic toast helper for Create Event
        function showCreateEventToast(message, isError) {
            var toastEl = document.getElementById('createEventToast');
            var toastBody = document.getElementById('createEventToastBody');
            if (!toastEl || !toastBody) return;

            toastBody.textContent = message;
            toastEl.classList.remove('text-bg-success', 'text-bg-danger');
            toastEl.classList.add(isError ? 'text-bg-danger' : 'text-bg-success');

            var bsToast = bootstrap.Toast.getOrCreateInstance(toastEl, { delay: 3000 });
            bsToast.show();
        }

        document.addEventListener('DOMContentLoaded', function () {
            // Office labels for the toast
            const officeLabels = {
                'VPAAFile': 'VP Academic Affairs (VPAA)',
                'VPFFile': 'VP Finance (VPF)',
                'AMUFile': 'Asset Management Unit (AMU)',
                'VPAFile': 'VP Administration (VPA)'
            };

            // File input handling for modal
            const fileInputs = {
                'VPAAFile': 'VPAA-file-name',
                'VPFFile': 'VPF-file-name',
                'AMUFile': 'AMU-file-name',
                'VPAFile': 'VPA-file-name'
            };

            Object.keys(fileInputs).forEach(function (inputId) {
                var fileInput = document.getElementById(inputId);
                var fileNameSpan = document.getElementById(fileInputs[inputId]);

                if (fileInput) {
                    fileInput.addEventListener('change', function () {
                        if (this.files.length > 0) {
                            var file = this.files[0];
                            var fileName = file.name;
                            var fileExtension = fileName.split('.').pop().toLowerCase();

                            // Check if file is PDF
                            if (fileExtension !== 'pdf') {
                                alert('Only PDF files are allowed. Please select a PDF file.');
                                this.value = ''; // Clear the file input
                                fileNameSpan.textContent = '';
                                return;
                            }

                            fileNameSpan.textContent = fileName;

                            // Toast: "{Document} will be submitted to {Office}"
                            var officeName = officeLabels[inputId] || 'the selected office';
                            showCreateEventToast('"' + fileName + '" will be submitted to ' + officeName + '.', false);
                        } else {
                            fileNameSpan.textContent = '';
                        }
                    });
                }
            });

            // Intercept Create Event form submit to show toast, then actually submit
            var createEventForm = document.getElementById('createEventForm');
            if (createEventForm) {
                createEventForm.addEventListener('submit', function (e) {
                    // Prevent double interception
                    if (!createEventForm.dataset.submitted) {
                        e.preventDefault();

                        showCreateEventToast('Event has been proposed.', false);

                        createEventForm.dataset.submitted = 'true';

                        // Small delay so user can see the toast, then submit
                        setTimeout(function () {
                            createEventForm.submit();
                        }, 800);
                    }
                });
            }

            // Calendar + preview logic (unchanged)
            var calendarEl = document.getElementById('calendar');
            var previewEl = document.getElementById('eventPreview');

            if (calendarEl && previewEl) {
                var events = @Html.Raw(eventsJson);

                function clearPreview() {
                    previewEl.classList.add('empty');
                    previewEl.innerHTML = `
                        <h4><i class="bi bi-calendar-event me-2"></i>Event Details</h4>
                        <p><i class="bi bi-info-circle me-2"></i>Select an event on the calendar to see details here.</p>
                    `;
                }

                function showPreview(event) {
                    previewEl.classList.remove('empty');
                    previewEl.innerHTML = `
                        <h4>${event.title}</h4>
                        <p><strong>Date:</strong> ${event.startStr}</p>
                        <p><strong>Status:</strong> ${event.extendedProps.status}</p>
                        <p><strong>Venue:</strong> ${event.extendedProps.venue ? event.extendedProps.venue : 'N/A'}</p>
                    `;
                }

                var calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'dayGridMonth',
                    height: 450,
                    events: events,
                    eventDidMount: function (info) {
                        var status = (info.event.extendedProps.status || '').toLowerCase().trim();
                        if (status === 'pending' || status === 'for approval') {
                            info.el.style.backgroundColor = '#ffc107';
                            info.el.style.borderColor = '#ffc107';
                            info.el.style.color = '#212529';
                            var titleEl = info.el.querySelector('.fc-event-title');
                            if (titleEl) titleEl.style.color = '#212529';
                        } else {
                            info.el.style.backgroundColor = 'var(--green)';
                            info.el.style.borderColor = 'var(--green)';
                            info.el.style.color = '#fff';
                            var titleEl = info.el.querySelector('.fc-event-title');
                            if (titleEl) titleEl.style.color = '#fff';
                        }
                        if (info.event.extendedProps.status) {
                            info.el.setAttribute('title', 'Status: ' + info.event.extendedProps.status);
                        }
                    },
                    eventClick: function (info) {
                        showPreview(info.event);
                    },
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'dayGridMonth,timeGridWeek,listWeek'
                    }
                });

                calendar.render();
                clearPreview();
            }
        });

        // Set minimum lapse date to tomorrow
        var lapseDateInput = document.getElementById('lapseDate');
        if (lapseDateInput) {
            var tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            var minDate = tomorrow.toISOString().slice(0, 16);
            lapseDateInput.min = minDate;
        }
    </script>
}