@model EventSwift.Controllers.DashboardController.PresidentDashboardViewModel

@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "President Dashboard";
    ViewBag.SkipNavbar = true;
}

<style>
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 15px;
    }

    .pagination li {
        margin: 0 2px;
    }

        .pagination li a,
        .pagination li span {
            padding: 8px 14px;
            border-radius: 8px;
            font-size: 14px;
            text-decoration: none;
            border: 1px solid #dee2e6;
            background: #ffffff;
            transition: all 0.2s ease-in-out;
        }

            .pagination li a:hover {
                background: #0d6efd;
                color: #fff;
                border-color: #0d6efd;
            }

    .pagination .active span {
        background: #0d6efd;
        color: #fff;
        border-color: #0d6efd;
    }

    .pagination .disabled span {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* Stat card styles */
    .stat-card {
        border: none;
        border-radius: 12px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1) !important;
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .stat-icon i {
            font-size: 1.75rem;
        }

    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1.2;
    }

    .stat-label {
        font-size: 0.9rem;
        color: #6c757d;
    }

    /* Section styles */
    .section-header {
        display: flex;
        align-items: center;
        padding: 12px 16px;
        background: var(--light-yellow);
        border-radius: 8px 8px 0 0;
        border-bottom: 2px solid var(--orange);
    }

        .section-header h5 {
            margin: 0;
            font-weight: 600;
            color: var(--green);
        }

        .section-header i {
            color: var(--green);
        }

    /* Table styles */
    .table-card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
    }

        .table-card .table {
            margin-bottom: 0;
        }

            .table-card .table thead th {
                border-bottom: none;
                font-weight: 600;
                padding: 14px 16px;
                font-size: 0.9rem;
            }

            .table-card .table tbody td {
                padding: 14px 16px;
                vertical-align: middle;
            }

            .table-card .table tbody tr {
                border-bottom: 1px solid #f0f0f0;
            }

                .table-card .table tbody tr:last-child {
                    border-bottom: none;
                }

                .table-card .table tbody tr:hover {
                    background-color: #f8f9fa;
                }

    /* Approved section green header */
    .approved-header {
        background: var(--green) !important;
        border-bottom: 2px solid #1a5c36 !important;
    }

        .approved-header h5,
        .approved-header i {
            color: #fff !important;
        }
</style>

<div class="d-flex flex-column min-vh-100" style="background-color: #f5f5f5;">
    @Html.Partial("~/Views/Shared/_Navbar.cshtml")

    @if (TempData["Success"] != null || TempData["Error"] != null)
    {
        <div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 1080;">
            <div class="toast align-items-center text-bg-@(TempData["Error"] != null ? "danger" : "success") border-0 show" role="alert" id="feedbackToast">
                <div class="d-flex">
                    <div class="toast-body">
                        @(TempData["Error"] ?? TempData["Success"])
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="container-fluid flex-grow-1 py-4 px-4">
        <!-- Header Section -->
        <div class="mb-4">
            <h2 class="fw-bold mb-1" style="color: var(--green);">
                <i class="bi bi-award me-2"></i>President Dashboard
            </h2>
            <p class="text-muted mb-0">Welcome, President!</p>
        </div>

        <!-- Stat Cards Row -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card stat-card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center gap-3 p-4">
                        <div class="stat-icon" style="background-color: rgba(23, 162, 184, 0.15);">
                            <i class="bi bi-calendar-event text-info"></i>
                        </div>
                        <div>
                            <div class="stat-number text-dark">@Model.TotalCount</div>
                            <div class="stat-label">Total Events</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stat-card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center gap-3 p-4">
                        <div class="stat-icon" style="background-color: rgba(255, 193, 7, 0.15);">
                            <i class="bi bi-hourglass-split text-warning"></i>
                        </div>
                        <div>
                            <div class="stat-number text-dark">@Model.PendingCount</div>
                            <div class="stat-label">For Approval</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stat-card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center gap-3 p-4">
                        <div class="stat-icon" style="background-color: rgba(40, 167, 69, 0.15);">
                            <i class="bi bi-check-circle text-success"></i>
                        </div>
                        <div>
                            <div class="stat-number text-dark">@Model.ApprovedCount</div>
                            <div class="stat-label">Approved Events</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Events Section -->
        <div class="card table-card shadow-sm mb-4">
            <div class="section-header">
                <h5><i class="bi bi-hourglass-split me-2"></i>Pending Events</h5>
            </div>
            <div class="card-body p-0">
                @if (!Model.PendingEvents.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 3rem; color: #dee2e6;"></i>
                        <p class="text-muted mt-3 mb-0">No events pending your approval at this time.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead style="background: #fafafa;">
                                <tr>
                                    <th style="color: var(--green);">Event Title</th>
                                    <th style="color: var(--green);">Client</th>
                                    <th style="color: var(--green);">Lapse Date</th>
                                    <th style="color: var(--green);">Date Sent</th>
                                    <th style="color: var(--green);">Status</th>
                                    <th style="color: var(--green);">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ev in Model.PendingEvents)
                                {
                                    var latestProposalDate = ev.Proposals?.OrderByDescending(p => p.SubmittedAt).FirstOrDefault()?.SubmittedAt;
                                    var isLapsed = ev.Status == "Lapsed" || ev.IsLapsed;
                                    <tr class="@(isLapsed ? "table-secondary" : "")">
                                        <td class="fw-semibold">@ev.Title</td>
                                        <td class="text-muted">@(ev.Client != null ? ev.Client.Username : "Unknown")</td>
                                        <td>
                                            @if (ev.LapseDate.HasValue)
                                            {
                                                var daysLeft = (ev.LapseDate.Value - DateTime.Now).TotalDays;
                                                if (isLapsed)
                                                {
                                                    <span class="text-danger"><i class="bi bi-x-circle me-1"></i>@ev.LapseDate.Value.ToString("g")</span>
                                                }
                                                else if (daysLeft <= 1)
                                                {
                                                    <span class="text-danger fw-bold"><i class="bi bi-exclamation-triangle me-1"></i>@ev.LapseDate.Value.ToString("g")</span>
                                                }
                                                else if (daysLeft <= 3)
                                                {
                                                    <span class="text-warning"><i class="bi bi-clock me-1"></i>@ev.LapseDate.Value.ToString("g")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@ev.LapseDate.Value.ToString("g")</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-muted">@(latestProposalDate?.ToString("g") ?? "-")</td>
                                        <td><span class="badge bg-info text-white">Sent to President</span></td>
                                        <td>
                                            <a href="@Url.Action("PresidentEventDetails", "EventProposals", new { id = ev.EventId })" class="btn btn-sm btn-custom">
                                                <i class="bi bi-eye me-1"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="pagination-container pb-3">
                        @Html.PagedListPager(
                            Model.PendingEvents,
                            page => Url.Action("PresidentDashboard", new { pendingPage = page, approvedPage = Request.QueryString["approvedPage"] }),
                            new PagedListRenderOptions()
                            {
                                DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                                DisplayLinkToLastPage = PagedListDisplayMode.Always,
                                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                MaximumPageNumbersToDisplay = 5,
                                UlElementClasses = new[] { "pagination" },
                                LiElementClasses = new[] { "page-item" },
                                LinkToPreviousPageFormat = "‹ Prev",
                                LinkToNextPageFormat = "Next ›",
                                LinkToFirstPageFormat = "« First",
                                LinkToLastPageFormat = "Last »"
                            }
                        )
                    </div>
                }
            </div>
        </div>

        <!-- Approved Events Section -->
        <div class="card table-card shadow-sm mb-4">
            <div class="section-header approved-header">
                <h5><i class="bi bi-check-circle me-2"></i>Approved Events</h5>
            </div>
            <div class="card-body p-0">
                @if (!Model.ApprovedEvents.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 3rem; color: #dee2e6;"></i>
                        <p class="text-muted mt-3 mb-0">No events have been approved yet.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead style="background: #fafafa;">
                                <tr>
                                    <th style="color: var(--green);">Event Title</th>
                                    <th style="color: var(--green);">Client</th>
                                    <th style="color: var(--green);">Date Approved</th>
                                    <th style="color: var(--green);">Status</th>
                                    <th style="color: var(--green);">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ev in Model.ApprovedEvents)
                                {
                                    <tr>
                                        <td class="fw-semibold">@ev.Title</td>
                                        <td class="text-muted">@(ev.Client != null ? ev.Client.Username : "Unknown")</td>
                                        <td class="text-muted">@(ev.ApprovedDate.HasValue ? ev.ApprovedDate.Value.ToString("g") : "-")</td>
                                        <td><span class="badge bg-success">Approved by President</span></td>
                                        <td>
                                            <a href="@Url.Action("PresidentEventDetails", "EventProposals", new { id = ev.EventId })" class="btn btn-sm btn-custom">
                                                <i class="bi bi-eye me-1"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="pagination-container pb-3">
                        @Html.PagedListPager(
                            Model.ApprovedEvents,
                            page => Url.Action("PresidentDashboard", new { approvedPage = page, pendingPage = Request.QueryString["pendingPage"] }),
                            new PagedListRenderOptions()
                            {
                                DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                                DisplayLinkToLastPage = PagedListDisplayMode.Always,
                                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                MaximumPageNumbersToDisplay = 5,
                                UlElementClasses = new[] { "pagination" },
                                LiElementClasses = new[] { "page-item" },
                                LinkToPreviousPageFormat = "‹ Prev",
                                LinkToNextPageFormat = "Next ›",
                                LinkToFirstPageFormat = "« First",
                                LinkToLastPageFormat = "Last »"
                            }
                        )
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var toastEl = document.getElementById('feedbackToast');
            if (toastEl) {
                setTimeout(function () {
                    var toast = bootstrap.Toast.getOrCreateInstance(toastEl);
                    toast.hide();
                }, 3000);
            }
        });
    </script>
}