@model EventSwift.Models.User

@{
    ViewBag.Title = "Edit";
    ViewBag.SkipNavbar = true; // This hides the main layout navbar
}

<div class="d-flex">
    @Html.Partial("~/Views/Shared/_Sidebar.cshtml")

    <div class="flex-grow-1 p-2">
        @Html.Partial("~/Views/Shared/_Navbar.cshtml")

        <h2>Edit User</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.UserId)

            <div class="mb-3">
                @Html.LabelFor(model => model.FullName, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Username, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.PasswordHash, "New Password (Leave blank to keep current)", new { @class = "form-label" })
                @Html.PasswordFor(model => model.PasswordHash, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Role, new { @class = "form-label" })
                @Html.DropDownListFor(model => model.Role, new SelectList(new[] {
    new { Value = "SuperAdmin", Text = "SuperAdmin" },
    new { Value = "Client", Text = "Client" },
    new { Value = "VPAA", Text = "VP Academic Affairs (VPAA)" },
    new { Value = "VPF", Text = "VP Finance (VPF)" },
    new { Value = "VPA", Text = "VP Administration (VPA)" },
    new { Value = "AMU", Text = "Asset Management Unit (AMU)" },
    new { Value = "President", Text = "President" }
}, "Value", "Text", Model.Role), "Select Role", new { @class = "form-select" })
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        }
    </div>
</div>
